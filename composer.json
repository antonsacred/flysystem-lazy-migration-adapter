{
    "name": "sacred/flysystem-lazy-migration-adapter",
    "description": "A Flysystem adapter that lazily migrates files from an old adapter to a new one as they are accessed.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "league/flysystem": "^2.0 || ^3.0"
    },
    "require-dev": {
        "league/flysystem-adapter-test-utilities": "^2.0 || ^3.30",
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "Sacred\\Flysystem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sacred\\Flysystem\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
